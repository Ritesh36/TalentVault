<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #f5f5f5;
            margin: 0;
        }
        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            background: white;
            padding: 15px;
            border-top-right-radius: 20px;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 100px;
        }
        .image-container {
            background: orange;
            padding: 20px;
            border-bottom-left-radius: 100px;
            border-top-right-radius: 70px;
            border-top-left-radius: 20px;
            width: 380px;
            height: 520px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .image-container img {
            max-width: 100%;
            max-height: 100%;
            height: auto;
        }
        .login-container {
            padding: 30px;
            width: 400px;
        }
        .toggle-buttons {
            display: flex;
            justify-content: space-between;
            background: #e6e6e6;
            border-radius: 20px;
            padding: 5px;
        }
        .toggle-buttons button {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            background: transparent;
        }
        .toggle-buttons .active {
            background: #4a54e1;
            color: white;
        }
        .form-group {
            margin: 10px 0;
        }
        input {
            margin-top: 5px;
            width: 95%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .submit-btn {
            width: 100%;
            padding: 10px;
            background: #4a54e1;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .social-login {
            display: flex;
            flex-direction: column;
            margin: 10px 0;
        }
        .social-login button {
            padding: 10px;
            margin: 5px 0;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .forgot-password-link {
            text-align: left;
            margin: 20px 0px;
            margin-top: 10px;
        }
        .signup-link {
            text-align: center;
            margin: 20px 0px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="image-container">
            <img src="images/writer.png" alt="Jobs Illustration">
        </div>
        <div class="login-container">
            <h2>Log in</h2>
            <div class="toggle-buttons">
                <button id="candidateBtn" class="active" onclick="toggleForm('candidate')">As Candidate</button>
                <button id="recruiterBtn" onclick="toggleForm('recruiter')">As Recruiter</button>
            </div>
            <div class="social-login">
                <button class="google-login-btn"><i class="fab fa-google"></i> Continue with Google</button>
            </div>
            <div style="text-align: center; margin: 20px 0;">
                <label>--------------- or Continue with ---------------</label>
            </div>
            <form id="loginForm">
                <div class="form-group">
                    <label>Email Id</label>
                    <input type="email" id="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" id="password" placeholder="Enter password">
                </div>
                <div class="forgot-password-link">
                    <a href="#">Forgot Password?</a>
                </div>
                <button type="submit" class="submit-btn">Login</button>
            </form>
            <div class="signup-link">
                Don't have an account? <a href="#">Sign Up</a>
            </div>
        </div>
    </div>

    <script>
        function toggleForm(type) {
            document.getElementById('candidateBtn').classList.remove('active');
            document.getElementById('recruiterBtn').classList.remove('active');
            if (type === 'candidate') {
                document.getElementById('candidateBtn').classList.add('active');
            } else {
                document.getElementById('recruiterBtn').classList.add('active');
            }
        }
    </script>
</body>
</html>
