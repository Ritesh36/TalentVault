<%- layout("./layouts/boilerplate.ejs") %>
<style>
    @keyframes logoAnimation {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.2);
        }
    }

    @keyframes companyAnimation {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.2);
        }
    }

    .logo-animation {
        animation: logoAnimation 3s infinite;
    }

    .company-animation span {
        display: inline-block;
        animation: companyAnimation 3s infinite;
        animation-delay: calc(var(--index) * 0.10s);
        letter-spacing: -13px;
    }

    #header {
        margin-top: 50px;
        position: relative;
        width: 100%;
        padding: 100px 100px;
        background: white;
        z-index: 1000;
        text-align: center;
    }

    .container-fluid {
        padding: 300px 15px;
    }

    .card {
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .card img {
        width: 60px;
        height: 60px;
        border: 1px solid #ccc;
        border-radius: 50%;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .card-text {
        font-size: 1rem;
    }

    .card-header {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
    }

    .btn-hover-effect {
        position: relative;
        overflow: hidden;
        transition: background-color 0.3s ease;
    }

    .btn-hover-effect::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.5);
        transition: left 0.5s;
    }

    .btn-hover-effect:hover::before {
        left: 100%;
    }
    @media (max-width: 768px) {
        .container-fluid {
            padding: 170px 15px;
        }
        #header {
            flex-direction: column;
            text-align: center;
            padding: 40px 5px;
        }
        #header img {
            margin-right: 0;
            margin-bottom: 10px;
        }
        #header h2 {
            font-size: 1rem;
        }
    }
    @media (max-width: 768px) {
        #header img {
            margin-right: 0;
            margin-bottom: 10px;
        }
        .container-fluid {
            padding: 260px 15px;
        }
        .card-title {
            font-size: 1.2rem;
        }

        .card-text {
            font-size: 0.9rem;
        }

        .card-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .card img {
            margin-bottom: 10px;
        }
    }

    @media (max-width: 576px) {
        .container-fluid {
            padding: 260px 15px;
        }
        .logo-animation {
            max-width: 40px;
            max-height: 40px;
        }

        .company-animation {
            font-size: 0.1rem;
        }

        .btn {
            font-size: 0.9rem;
        }
    }
    @media (max-width: 400px) {
        .container-fluid {
            padding: 260px 15px;
        }
        .logo-animation {
            width: 60px;
            height: 60px;
        }

        .company-animation {
            font-size: 0.1rem;
        }

        .btn {
            font-size: 0.9rem;
        }
    }
</style>

<body style="margin: 0; padding: 0;">
    <div id="header" class="header d-flex justify-content-center align-items-center mb-3" style="position: absolute; top: 0; left: 0; right: 0; width: 100%; z-index: 10;">
        <img src="<%= listing.logo %>" alt="<%= listing.company %> Logo" class="logo-animation" style="max-width: 70px; max-height: 70px; margin-right: 15px; border: 2px solid #000; border-radius: 50%;">
        <h2 class="mb-0 company-animation" style="font-size: 3rem;">
            <% listing.company.split('').forEach((char, index) => { %>
                <span style="--index: <%= index %>;"><%= char %></span>
            <% }) %>
        </h2>
    </div>
    <div class="container-fluid mt-100 pt-105">
        <div class="card">
            <div class="card-header p-3">
                <div class="d-flex align-items-center">
                    <img src="<%= listing.logo %>" class="card-img-top" alt="<%= listing.company %> Logo">
                    <div class="ml-3" style="margin-left: 10px;">
                        <h2 class="card-title mb-0"><%= listing.title %></h2>
                        <p class="card-text"><%= listing.company %></p>
                    </div>
                </div>
                <button type="button" class="btn btn-primary btn-hover-effect" style="background-color: green; border: 2px solid green;">Quick Apply</button>
            </div>
            <div class="p-3">
                <ul class="list-group">
                    <li class="list-group-item border-0">
                        <img src="/images/location.png" alt="Location Icon" style="width: 16px; height: 16px; margin-right: 5px;border: 0;">
                        <%= listing.location %>
                    </li>
                    <li class="list-group-item border-0">
                        <img src="/images/calendar.png" alt="Calendar Icon" style="width: 18px; height: 16px; margin-right: 5px;border:0">
                        <strong>Updated On: </strong><%= new Date(listing.created_at).toLocaleDateString('en-IN', {day:'numeric',month:'short',year:'numeric'}) %>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h4><strong>Description:</strong></h4>
                <ul>
                    <% listing.description.forEach(desc => { %>
                        <% desc.split('.').forEach(point => { %>
                            <% if (point.trim()) { %>
                                <li><%= point.trim() %></li>
                            <% } %>
                        <% }) %>
                    <% }) %>
                </ul>
            </div>
            <div class="card-body">
                <h4><strong>Requirements:</strong></h4>
                <ul>
                    <% listing.requirements.forEach(req => { %>
                        <% req.split('.').forEach(point => { %>
                            <% if (point.trim()) { %>
                                <li><%= point.trim() %></li>
                            <% } %>
                        <% }) %>
                    <% }) %>
                </ul>
            </div>
        </div>

        <div class="card p-3">
            <h4>Additional Information</h4>
            <div class="row mt-3">
                <div class="col-md-6 ">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5><strong>Location:</strong></h5>
                            <p class="card-text"><%= listing.location %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5><strong>Job Type:</strong></h5>
                            <p class="card-text"><%= listing.jobType %></p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5><strong>Salary:</strong></h5>
                            <p class="card-text"><%= listing.salary || 'Not specified' %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5><strong>Eligibility:</strong></h5>
                            <p class="card-text"><%= listing.eligibility %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Button -->
        <form method="GET" action="/listings/<%= listing._id %>/edit" class="mt-3">
            <button type="submit" class="btn btn-warning w-100">Edit</button>
        </form>

        <!-- Delete Button -->
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="mt-3">
            <button type="submit" class="btn btn-danger w-100">Delete</button>
        </form>
    </div>

    <script>
        const gradients = [
            'linear-gradient(to left, #e0f7fa, #80deea, #26c6da)',
            'linear-gradient(to left, #fff9c4, #fff176, #ffd54f)',
            'linear-gradient(to left, #ffe0b2, #ffcc80, #ffb74d)'
        ];

        const randomGradient = gradients[Math.floor(Math.random() * gradients.length)];
        document.getElementById('header').style.background = randomGradient;
    </script>
</body>
