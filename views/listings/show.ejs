<%- layout("./layouts/boilerplate.ejs") %>
<style>
     @keyframes slideIn {
        0% {
            transform: translateX(100%);
            opacity: 0;
        }
        50% {
            transform: translateX(0);
            opacity: 1;
        }
        100% {
            transform: translateX(-100%);
            opacity: 0;
        }
    }
    @keyframes slideOut {
        0% {
            transform: translateX(-100%);
            opacity: 0;
        }
        50% {
            transform: translateX(0);
            opacity: 1;
        }
        100% {
            transform: translateX(100%);
            opacity: 0;
        }
    }

    .logo-animation, .company-animation {
        animation: slideIn 6s ease-in-out, slideOut 6s ease-in-out 6s;
        animation-iteration-count: infinite;
        animation-delay: 3s;
    }
</style>
<body>
    <div class="container mt-5">
        <!-- Header with logo and company name, centered -->
        <div class="header d-flex justify-content-center align-items-center mb-3">
            <!-- Logo: Increased size, smaller than the company name -->
            <img src="<%= listing.logo %>" alt="<%= listing.company %> Logo" class="logo-animation" style="max-width: 90px; max-height: 90px; margin-right: 15px;margin-top: 50px; margin-bottom: 50px;border: 2px solid #000;border:1px solid rgb(49, 51, 51);border-radius:50% ;">
        
           
            <h2 class="mb-0 company-animation" style="font-size: 4.5rem; margin-bottom: 0;"> <%= listing.company %></h2>
        </div>
        

        <ul class="list-group">
            <div class="card" style="width: 18rem;">
                <img src="<%= listing.logo %>" class="card-img-top" alt="<%= listing.company %> Logo">
                <div class="card-body">
                  <h2 class="card-title"><%= listing.company %></h2>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><strong>Title:</strong> <%= listing.title %></li>
                  <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
                </ul>
            </div>
            <li class="list-group-item"><strong>Description:</strong>
                <ul>
                    <% listing.description.forEach(desc => { %>
                        <li><%= desc %></li>
                    <% }) %>
                </ul>
            </li>
            <li class="list-group-item"><strong>Requirements:</strong>
                <ul>
                    <% listing.requirements.forEach(req => { %>
                        <li><%= req %></li>
                    <% }) %>
                </ul>
            </li>
            
            <li class="list-group-item"><strong>Salary:</strong> &#8377; <%= listing.salary.toLocaleString('en-IN') %></li>
            <li class="list-group-item"><strong>Location:</strong> <%= listing.location %></li>
            <li class="list-group-item"><strong>Job Type:</strong> <%= listing.jobType %></li>
            <li class="list-group-item"><strong>Eligibility:</strong> <%= listing.eligibility.join(", ") %></li>
            <li class="list-group-item"><strong>Application Deadline:</strong> <%= listing.deadline.toDateString() %></li>
            <li class="list-group-item"><strong>Posted On:</strong> <%= listing.created_at.toDateString() %></li>
        </ul>

        <!-- Edit Button -->
        <form method="GET" action="/listings/<%= listing._id %>/edit" class="mt-3">
            <button type="submit" class="btn btn-warning">Edit</button>
        </form>

        <!-- Delete Button -->
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="mt-3">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</body>
